            <!--&lt;!&ndash;自定义拦截器类&ndash;&gt;-->
            <!--<bean class="com.tl.interceptor.LoginInterceptor"/>-->
        <!--</mvc:interceptor>-->
    <!--</mvc:interceptors>-->

</beans>